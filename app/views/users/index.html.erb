<div id="usersCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% @users.each_with_index do |user, index| %>
      <div class="carousel-item <%= 'active' if index.zero? %>">
        <div class="d-block w-100 text-center">
          <% if user.avatar.attached? %>
            <%= image_tag(user.avatar, class: "d-block w-100", alt: "#{user.full_name.titleize}'s avatar") %>
          <% else %>
            <%= image_tag('default-avatar.jpg', class: "d-block w-100", alt: "Default avatar") %>
          <% end %>
          <div class="carousel-caption d-none d-md-block">
            <div class="card w-100 mb-3">
              <div class="card-body">
                <h5 class="card-title"><%= user.full_name.titleize %></h5>
                <p class="card-text"><%= user.bio %></p>
                <%= link_to 'View profile', user_path(user.username), class: "btn btn-primary" %>
                
                <div class="d-flex justify-content-center">
                  <!-- Like Button -->
                  <%= form_with url: like_match_by_username_path(username: user.username), method: :put do |form| %>
                    <%= form.submit 'Like', class: "fa-solid fa-heart fa-2xl mr-2", style: "color: #e32400;" %>
                  <% end %>

                  <!-- Reject (Dislike) Button -->
                  <%= form_with url: reject_match_by_username_path(username: user.username), method: :put do |form| %>
                    <%= form.submit 'Reject', class: "fa-solid fa-circle-xmark fa-2xl ml-2", style: "color: #e32400;" %>
                  <% end %>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <% if @users.size > 1 %>
    <button class="carousel-control-prev" type="button" data-bs-target="#usersCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#usersCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
<% end %>
</div>
