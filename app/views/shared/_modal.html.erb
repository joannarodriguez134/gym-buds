<!-- Modal -->
<div class="modal fade" id="matchNotificationModal" tabindex="-1" role="dialog" aria-labelledby="matchNotificationLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="matchNotificationLabel">It's a Match!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Congratulations! You and <%= @user.username %> have both liked each other.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Keep Playing</button>
        <a href="<%= conversations_path(with: @user.username) %>" class="btn btn-primary">Send Message</a>
      </div>
    </div>
  </div>
</div>

