<p style="color: green"><%= notice %></p>

<h1 class="text-center my-4">My Messages</h1>

<div class="container">
  <div class="list-group">
    <% @messages.each do |message| %>
      <% message_user = message.sender == current_user ? message.receiver : message.sender %>
      <a href="<%= user_path(message_user.username) %>" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
        <div class="d-flex gap-2 w-100 justify-content-between">
          <div class="d-flex align-items-start">
            <% if message_user.avatar.attached? %>
              <%= image_tag(message_user.avatar, size: "72x72", class: "rounded-circle flex-shrink-0", alt: "#{message_user.full_name.titleize}'s avatar") %>
            <% else %>
              <%= image_tag('default-avatar.jpg', size: "72x72", class: "rounded-circle flex-shrink-0", alt: "Default avatar") %>
            <% end %>
            <div class="pt-1">
              <h6 class="mb-0">
                <%= message.sender == current_user ? "To #{message.receiver.email}" : "From #{message.sender.email}" %>
              </h6>
              <p class="mb-0 opacity-75">
                <%= message.body %>
              </p>
            </div>
          </div>
          <small class="opacity-50 text-nowrap">
            <%= message.created_at.strftime("%b %d, %Y %H:%M") %>
          </small>
        </div>
      </a>
    <% end %>
  </div>
</div>

<%= render 'form', message: Message.new %>
