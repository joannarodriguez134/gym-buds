<h2 class="mb-4">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: true }) do |f| %>
  <div class="form-inputs">

    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { class: 'form-control', autocomplete: "email" },
                wrapper_html: { class: 'mb-3' },
                label_html: { class: 'form-label' } %>

    <%= f.input :password,
                required: false,
                input_html: { class: 'form-control', autocomplete: "current-password" },
                wrapper_html: { class: 'mb-3' },
                label_html: { class: 'form-label' } %>

    <% if devise_mapping.rememberable? %>
      <%= f.input :remember_me, as: :boolean,
                  wrapper_html: { class: 'form-check' },
                  input_html: { class: 'form-check-input' },
                  label_html: { class: 'form-check-label' } %>
    <% end %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: 'btn btn-success mt-3' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
